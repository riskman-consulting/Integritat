# ============================================
# Railway Environment Variables Template
# ============================================
# Copy these variables to Railway Dashboard â†’ Variables
# Replace placeholder values with actual production values

# Server Configuration
PORT=5000
NODE_ENV=production

# Database (Railway PostgreSQL)
# Railway automatically provides DATABASE_URL when you add PostgreSQL
# Format: postgresql://user:password@host:port/database
DATABASE_URL=${DATABASE_URL}

# JWT Configuration
# IMPORTANT: Generate strong secrets for production!
# Use: node -e "console.log(require('crypto').randomBytes(64).toString('hex'))"
JWT_SECRET=your_super_secret_jwt_key_change_this_in_production
JWT_REFRESH_SECRET=your_super_secret_refresh_key_change_this_too
JWT_EXPIRY=1h
JWT_REFRESH_EXPIRY=7d

# CORS Configuration
# Update with your actual Vercel frontend URL after deployment
CORS_ORIGIN=https://your-app.vercel.app

# Storage Configuration
# Option 1: Local storage (default)
STORAGE_TYPE=local

# Option 2: Azure Blob Storage (recommended for production)
# STORAGE_TYPE=azure
# AZURE_STORAGE_CONNECTION_STRING=DefaultEndpointsProtocol=https;AccountName=...
# AZURE_CONTAINER_NAME=riskman-documents

# File Upload Configuration
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=pdf,doc,docx,xls,xlsx,jpg,jpeg,png

# Optional: Logging
LOG_LEVEL=info

# Optional: Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
